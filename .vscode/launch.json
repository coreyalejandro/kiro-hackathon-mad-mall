{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Local Bootstrap Script",
      "program": "${workspaceFolder}/node_modules/ts-node/dist/bin.js",
      "args": [
        "${workspaceFolder}/scripts/bootstrap-local.ts"
      ],
      "env": {
        "ENVIRONMENT": "development",
        "AWS_REGION": "us-east-1",
        "AWS_DEFAULT_REGION": "us-east-1",
        "LOCALSTACK_URL": "http://localhost:4566",
        "DYNAMODB_ENDPOINT": "http://localhost:4566",
        "DYNAMODB_TABLE_NAME": "madmall-development-main",
        "USER_CONTENT_BUCKET": "madmall-development-user-content"
      },
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "node-terminal",
      "name": "Next.js Web App Dev",
      "request": "launch",
      "command": "pnpm --filter @madmall/web-app dev"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Web App: Next.js",
      "runtimeExecutable": "pnpm",
      "runtimeArgs": [
        "--filter", "@madmall/web-app",
        "run", "dev"
      ],
      "env": {
        "NODE_OPTIONS": "--inspect",
        "ENVIRONMENT": "dev"
      },
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Infra: CDK Synth",
      "program": "${workspaceFolder}/packages/infrastructure/src/app.ts",
      "runtimeArgs": [
        "-r",
        "ts-node/register"
      ],
      "env": {
        "ENVIRONMENT": "dev"
      },
      "cwd": "${workspaceFolder}/packages/infrastructure",
      "console": "integratedTerminal"
    }
  ]
}